<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="MauiFlayoutPage.FlayoutPageMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiFlayoutPage"
    Title="FlayoutPageMenu"
    FlyoutLayoutBehavior="Popover">

    <!--  define o menu  -->
    <FlyoutPage.Flyout>

        <!--  Página de menu  -->
        <pages:Menu />

    </FlyoutPage.Flyout>

    <!--  Conteúdo principal que já vai vir aberto  -->
    <FlyoutPage.Detail>

        <NavigationPage>
            <x:Arguments>
                <!--  Página de conteúdo  -->
                <pages:Page1 />
            </x:Arguments>
        </NavigationPage>


    </FlyoutPage.Detail>
</FlyoutPage>